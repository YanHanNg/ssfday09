<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            {{#each type}}
            <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                {{#if ../isStories}}
                    <img src="/no-image-available.jpg" alt="typeImage" height="300px">
                {{else}}
                    <img src="{{this.thumbnail.path}}.{{this.thumbnail.extension}}" alt="typeImage" height="300px">
                {{/if}}
                <div class="card-body card-mod">
                    <p class="card-text"><span>{{this.title}}</span></p>
                    <p class="card-text"><span>{{this.description}}</span></p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <a href="{{this.urls.[0].url}}"><button type="button" class="btn btn-sm btn-outline-secondary">View</button></a>
                        </div>
                    </div>
                </div>
            </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>